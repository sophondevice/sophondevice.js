{
  "name": "@sophon/device",
  "version": "0.0.1",
  "description": "device system for sophon device library",
  "homepage": "https://github.com/sophondevice/sophondevice#readme",
  "type": "module",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "./**/*.js",
    "./**/*.d.ts",
    "./**/*.js.map"
  ],
  "scripts": {
    "build:source": "microbundle -i src/index.ts --no-generateTypes --no-compress --external none",
    "build-types": "dts-bundle-generator --disable-symlinks-following --project ./tsconfig.json --umd-module-name sophonDevice -o ./dist/sophon-device.d.ts ./src/index.ts",
    "build-doc": "typedoc --out dist/doc src/index.ts",
    "build": "shx rm -rf ./dist && npm run build:source && npm run build-types",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sophondevice/sophondevice.git"
  },
  "keywords": [
    "javascript",
    "3d",
    "rendering",
    "engine",
    "webgl",
    "webgpu",
    "canvas",
    "sophon",
    "device"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sophondevice/sophondevice/issues"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@web/dev-server": "^0.1.35",
    "dts-bundle-generator": "^7.2.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "typedoc": "^0.23.24",
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-strip": "^3.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/pluginutils": "^5.0.2",
    "rollup": "^3.15.0",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-visualizer": "^5.9.0",
    "prettier": "^2.8.4",
    "replace": "^1.2.2",
    "run-script-os": "^1.1.6",
    "shx": "^0.3.4",
    "typescript": "^4.7.3",
    "tslib": "^2.5.0",
    "@sophon/base": "workspace:*"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.26",
    "@types/node": "^18.13.0"
  },
  "peerDependencies": {
    "@sophon/base": "workspace:*"
  }
}
