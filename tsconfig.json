{
  "compilerOptions": {
    "downlevelIteration": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "listEmittedFiles": true,
    "noUnusedLocals": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "stripInternal": true,
    "keyofStringsOnly": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@sophon/*": ["build/@sophon/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
